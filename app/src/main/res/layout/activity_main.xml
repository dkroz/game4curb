<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/label_move"
        android:textSize="32sp"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/label_move"
        android:background="#505050"
        />

    <ImageButton
        android:id="@+id/btn_paper"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/label_move"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_paper"
        android:scaleType="fitCenter"
        android:background="@drawable/btn_move"/>

    <ImageButton
        android:id="@+id/btn_rock"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/btn_paper"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_rock"
        android:scaleType="fitCenter"
        android:background="@drawable/btn_move"/>

    <ImageButton
        android:id="@+id/btn_scissors"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/btn_paper"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_scissors"
        android:scaleType="fitCenter"
        android:background="@drawable/btn_move"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btn_rock"
        android:layout_marginTop="30dp"
        android:background="#505050"
        />



</RelativeLayout>
